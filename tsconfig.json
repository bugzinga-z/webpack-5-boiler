{
  "compilerOptions": {
    "outDir": "./dist",
    "noImplicitAny": true,
    "target": "ES5",
    "module": "ES6",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "strict": true,
    "typeRoots": ["node_modules/@types", "src/types"]
  },
  "include": ["./src/**/*"],
  "exclude": ["src/**/*.spec.ts", "node_modules"]
}
